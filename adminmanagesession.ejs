<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Sessions</title>
    <style>
      
      * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background-color: #eef2f7;
            color: #333;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h1 {
            font-size: 2rem;
            color: #2c3e50;
            text-align: center;
            margin-bottom: 20px;
        }

        .session-list {
            max-width: 700px;
            width: 100%;
            background-color: #ffffff;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        ul {
            list-style: none;
            padding: 0;
        }

        li {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px 18px;
            margin-bottom: 10px;
            background: linear-gradient(135deg, #e3f2fd, #bbdefb);
            border-radius: 10px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        li:hover {
            transform: scale(1.02);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
        }

        .session-details {
            font-size: 1rem;
            color: #34495e;
        }

        form {
            display: inline;
        }

        button {
            padding: 10px 18px;
            background-color: #ff4757;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 0.9rem;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        button:hover {
            background-color: #e84118;
            transform: scale(1.05);
        }

        @media (max-width: 768px) {
            h1 {
                font-size: 1.8rem;
            }

            .session-list {
                padding: 20px;
                width: 90%;
            }

            li {
                flex-direction: column;
                align-items: flex-start;
                padding: 10px 15px;
            }

            button {
                font-size: 0.9rem;
                padding: 8px 16px;
                margin-top: 8px;
            }
        }

    </style>
</head>
<body>

    <h1>Manage Sessions</h1>

    <div class="session-list">
        <ul>
            <% sessions.forEach(session => { %>
                <li>
                    <div class="session-details">
                        <strong><%= session.sport.name %></strong> - <%= session.location %> (<%= session.startTime %>)
                    </div>
                    <form action="/admin/delete-session/<%= session.id %>" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit">Delete</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    </div>

</body>
</html>
